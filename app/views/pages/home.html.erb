<% if current_user.present? %>
  <%= link_to "Let's write a post", new_user_post_path(current_user.id), class: "btn btn-lg btn-dark btn-cta btn-aligment" %>
  <div id="root" data-posts="<%= @posts.to_json %>"></div>
<% else %>
  <%= link_to "Let's write a post", new_user_session_path, class: "btn btn-lg btn-dark btn-cta btn-aligment" %>
  <div id="root" data-posts="<%= @posts.to_json %>"></div>
<% end %>


